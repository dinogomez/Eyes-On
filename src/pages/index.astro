---
import { SEO } from "astro-seo";
import Kujari from "./liberation/2025/kujari.astro";

---

<!-- Latest News -->
<>
	<SEO
      title="Eyes On - War Photography"
      description="This news gallery showcases a collection of images and videos highlighting the operations of the Philippine Joint Special Forces."
      openGraph={{
        basic: {
          title: "Eyes On",
          type: "Photography",
          image: "/card.webp",
        }
      }}
      twitter={{
        creator: "@paulgomezz_"
      }}
      extend={{
        // extending the default link tags
        link: [{ rel: "icon", href: "/eyeson.ico" }],
        // extending the default meta tags
        meta: [
          {
            name: "twitter:image",
            content: "/card.webp",
          },
          { name: "twitter:title", content: "Eyes On - War Photography" },
          { name: "twitter:description", content: "Photography of the Philippine Joint Special Forces" },
        ],
      }}
    />
	<Kujari />
	</>

<style>
  /* Add smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }

  /* Add custom styles for the gallery hover effects */
  .aspect-w-3 {
    position: relative;
    padding-bottom: 66.666667%;
  }

  .aspect-h-2 {
    position: relative;
  }

  .aspect-w-3 img {
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    object-fit: cover;
  }

  /* Add hover effect for gallery items */
  .group:hover img {
    transform: scale(1.05);
  }
</style>
