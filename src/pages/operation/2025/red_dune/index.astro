---
import Page from "../../../../components/Page.astro";
import { images } from "../../../../data/2025/operations/events/red_dune";
import getEvent from "../../../../utils/getEvent";
import { optimizeImages } from "../../../../utils/imageOptimizer";
// Optimize images using the utility
const galleryImages = await optimizeImages(images);
const operation = getEvent("Operation Red Dune", "Operation");
---

<Page 
  title={operation?.title} 
  description={operation?.description} 
  images={galleryImages} 
  curator={operation?.curator}
/>

<style>
  /* Add smooth scroll behavior */
  html {
    scroll-behavior: smooth;
  }



  /* Add custom styles for the gallery hover effects */
  .aspect-w-3 {
    position: relative;
    padding-bottom: 66.666667%;
  }

  .aspect-h-2 {
    position: relative;
  }

  .aspect-w-3 img {
    position: absolute;
    height: 100%;
    width: 100%;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    object-fit: cover;
  }

  /* Add hover effect for gallery items */
  .group:hover img {
    transform: scale(1.05);
  }
</style> 